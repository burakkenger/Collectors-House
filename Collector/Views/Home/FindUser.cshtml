@using EntityLayer.Concrete
@model List<User>

@{
    ViewData["Title"] = "FindUser";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<title>Kullanıcı Ara</title>
<link rel="stylesheet" href="~/css/profileButton.css">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v6.0.0-beta3/css/all.css">

<div class="container mt-4">
    @using (Html.BeginForm("FindUser", "Home", FormMethod.Post))
    {
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1" style="padding: 0px;"><a href="#"><button role="submit" class="profileButton"><i class="fa-solid fa-magnifying-glass"></i></button></a></span>
            <input type="text" class="form-control" placeholder="Kullanıcı Adına Göre Arayın" name="keyword">
        </div>
    }


    <div class="list-group">
        @foreach (var Users in Model)
        {
            <a href="/Profile/OtherUserProfile/@Users.ID" class="list-group-item list-group-item-action">
                <div class="d-flex align-items-start">
                    <p class="mt-3"><img src="@Users.ProfileImage" class="profileAvatar-md" alt="Avatar"></p>
                    <div style="margin-left: 25px; margin-top: 15px;">
                        <h5 class="mb-1">@Users.Name @Users.Surname</h5>
                        <p class="mb-1">@Users.Username</p>
                        <small>@Users.About</small>
                    </div>
                </div>
            </a>
        }
    </div>
</div>



